<h1><%= pluralize(@movies.size, 'Movie') %></h1>
<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= link_to movie.title, movie %> </h2>
    </header>
    <p>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= time_ago_in_words(movie.released_on || Time.now) %></td>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
      <tr>
        <th>Created:</th>
        <td><%= movie.created_at.to_s(:release_date) %></td>
      </tr>
    </table>
  </article>
<% end %>